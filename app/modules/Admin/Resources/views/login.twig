<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login</title>

    {{stylesheet([
        '@xsanisty-admin/css/bootstrap.min.css',
        '@xsanisty-admin/css/font-awesome.min.css',
        '@xsanisty-admin/css/dashboard/dashboard.css',
        '@xsanisty-admin/css/themes/blue.css',
    ])}}

</head>
<body>
    <div class="page-wrapper">
        <div class="row" style="margin-top:50px">
            <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-12">
                {% if message %}
                <div class="alert alert-danger">
                    {{message}}
                </div>
                <hr>
                {% endif %}
                <div class="widget">
                    <div class="widget-title">
                        <i class="fa fa-user"></i> Login
                    </div>
                    <div class="widget-body">
                        <form method="post" action="{{url('admin.authenticate')}}" class="form-horizontal">
                            <div class="form-group">
                                <label for="email" class="col-sm-3 control-label">Email</label>
                                <div class="col-sm-9">
                                    <input name="email" type="email" class="form-control" id="email" placeholder="Email" value="{{ email | default }}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-sm-3 control-label">Password</label>
                                <div class="col-sm-9">
                                    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-9 col-sm-offset-3">
                                    <label class="checkbox-inline" for="remember">
                                        <input type="checkbox" id="remember" name="remember" value="1" {% if remember %}checked{% endif %}> Remember Me
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <button class="btn btn-primary pull-right">Login</button>
                                    <button class="btn btn-danger pull-right">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Page Wrapper -->

    {{javascript([
        '@xsanisty-admin/js/jquery.min.js',
        '@xsanisty-admin/js/bootstrap.min.js',
        '@xsanisty-admin/js/jquery.cookie.js',
    ])}}

</body>
</html>